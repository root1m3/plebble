function help {
cat << EOF
$0 <ip_address> 



EOF
}

ip=$1

ssh $ip

if [[ $? -ne 0 ]]; then
    echo "KO 30298 cannot ssh $ip.
    exit 1
fi

subir
 blob
 btand_install_blob
 bde install
 


exit 0
