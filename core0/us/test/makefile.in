CXXFLAGS=-O0 -g -std=c++20 -DDEBUG -Wno-psabi
CXX:=g++
CPPS:=$(wildcard *.cpp) $(wildcard net/*.cpp) $(wildcard sim/*.cpp) $(wildcard shard/*.cpp)
OBJS:=$(CPPS:.cpp=.o)
DEPENDS := $(patsubst %.cpp,%.d,$(CPPS))
HS:=$(wildcard *.h) $(wildcard net/*.h) $(wildcard sim/*.h) $(wildcard shard/*.h)
INC:=-I../..
USGOV:=##str3##gov
LIBUSGOV:=lib##str3##gov
USWALLET:=##str3##wallet
LIBUSWALLET:=lib##str3##wallet
LIBCRYPTO:=$(shell pkg-config --libs libcrypto++)
EC:=$(shell pkg-config --libs libsecp256k1)
LIBS:=-L../wallet -l${USWALLET} -L../gov -l${USGOV} ${EC} ${LIBCRYPTO} -lb64 -ldl
ARCH:=$(shell uname -m)
FCGI:=##str45##
LIBUSTEST:=lib##str3##test

ifeq ($(ARCH), armv7l)
    LIBS+=-latomic
endif

ifeq ($(FCGI),1)
    LIBS+=-lfastcgipp
endif

RPATH:=-Wl,-z,defs -Wl,-rpath,../wallet -Wl,-rpath,../gov

all: ${LIBUSTEST}.so

${LIBUSTEST}.so: ${OBJS} ${HS}
	$(CXX) -fPIC -shared ${CXXFLAGS} ${RPATH} ${OBJS} ${LIBS} -lstdc++fs -pthread -o ${LIBUSTEST}.so

-include $(DEPENDS)

%.o: %.cpp makefile
	$(CXX) -fPIC ${CXXFLAGS} ${INC} -MMD -MP -c $< -o $@

clean:
	rm -f ${LIBUSTEST}.so
	$(RM) ${OBJS}
	$(RM) ${DEPENDS}
#	rm *.o -f
#	rm net/*.o -f
#	rm sim/*.o -f

.PHONY: all clean

