USGOV:=##str3##gov
USHGOV:=##str3##-gov
CXXFLAGS = -g -O0 -std=c++20 -DDEBUG
CPPS:=$(wildcard *.cpp)
OBJS:=$(CPPS:.cpp=.o)
HS:=$(wildcard *.h)
EC:=$(shell pkg-config --libs libsecp256k1)
OS:=$(shell uname)
ifeq (${OS},Linux)
    ARCH:=$(shell uname -m)
else
    ifeq (${OS},FreeBSD)
      ARCH:=$(shell uname -p)
    endif
endif

INC:=-I../..

LIB:=-L../gov -l${USGOV}
LIB+=${EC}
ifeq ($(ARCH),armv7l)
    LIB+=-latomic
endif
LIB+=-pthread -lstdc++fs 

ifneq (,$(findstring -g,${CXXFLAGS}))
    RPATH:=-Wl,-rpath,../gov
else
    RPATH:=
endif

all: ${USHGOV}

${USHGOV}: ${OBJS}
	@echo ""
	@echo "[--->Link executable: ${USHGOV}]"
	$(CXX) ${CXXFLAGS} ${RPATH} ${OBJS} ${LIB} -o ${USHGOV}
	@echo ""

%.o: %.cpp
	g++ -fPIC -c ${CXXFLAGS} ${INC} $^ -o $@

clean:
	$(RM) -f ${USHGOV}
	$(RM) -f *.o

.PHONY: all clean

