[[ ! -f blob ]] && echo "expected blob file" && exit 1

fullpath=`tar -I zstd -tvf blob | grep ".apk\$" |awk '{print $NF}'`
echo $fullpath | tr '/' ' ' | awk '{print $NF}' > apkname
apkname=`cat apkname`
tar -I zstd -xf blob $fullpath --transform='s:.*:apk:'
echo "apkname $apkname"
file apk

exit 0
